root = true

[*]
charset = utf-8

indent_style = tab
indent_size = 8

max_line_length = 80

end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{md,Rmd}]
trim_trailing_whitespace = false
indent_style = space
indent_size = 4

[*.R]
indent_style = space
indent_size = 2

[*Makefile]
indent_style = tab
